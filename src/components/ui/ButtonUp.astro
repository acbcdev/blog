<div id="button-up" class="ctn-btn opacity-0">
  <button
    id="scroll-to-top"
    aria-label="Volver al inicio de la arriba"
    class="cursor-default"
  >
    <svg
      aria-label="Subir al inicio de la página"
      stroke-width="2"
      stroke="currentColor"
      viewBox="0 0 24 24"
      fill="none"
      class="icon h-6 w-6 -rotate-45 group-hover:-rotate-90 group-hover:text-accent motion-safe:transition"
      width="20px"
    >
      <path
        d="M14 5l7 7m0 0l-7 7m7-7H3"
        stroke-linejoin="round"
        stroke-linecap="round"></path>
    </svg>
  </button>
</div>

<script>
  import { $ } from "@/lib/dom";

  let timeout = 0; // Identificador para clearTimeout
  const $button = $("#scroll-to-top") as HTMLButtonElement;

  const DISPLAY = { BLOCK: "block", NONE: "none" } as const;

  // Función para mostrar u ocultar el botón
  function toggleScrollToTop() {
    const scrollTop =
      document.body.scrollTop || document.documentElement.scrollTop;
    const display = scrollTop > 2000 ? DISPLAY.BLOCK : DISPLAY.NONE;
    if ($button) {
      const parent = $button.closest("#button-up");
      parent?.classList.toggle("opacity-0", display === DISPLAY.NONE);
      $button.classList.toggle("cursor-default", display === DISPLAY.NONE);
    }
  }

  function throttledScrollHandler() {
    if (!timeout) {
      timeout = requestAnimationFrame(() => {
        toggleScrollToTop();
        timeout = 0;
      });
    }
  }

  window.addEventListener("scroll", throttledScrollHandler);

  $button.addEventListener("click", () => {
    console.log("click");
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
</script>

<style>
  .ctn-btn {
    position: fixed;
    bottom: 10px;
    right: 10px;
    z-index: 1000;
    transition-duration: 0.25s;

    &:hover {
      transition-duration: 0.3s;
      scale: 1.2;
      & .icon {
        opacity: 0.9;
      }

      & button {
        transition-duration: 0.2s;
        border-color: var(--accent);
        background: var(--accent);
      }
    }

    & button {
      background-color: transparent;
      border: 3px solid #fff;
      border-radius: var(--radius);
      display: grid;
      place-items: center;
    }

    & .icon {
      width: 3rem;
      height: 3rem;
      stroke: #fff;
      transition-duration: 0.3s;
      padding: 0.5rem;
      transform: rotate(-90deg);
    }
  }
  button {
    cursor: pointer;
  }
  .opacity-0 {
    transition-property: opacity;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
    opacity: 0;
  }
  .cursor-default {
    cursor: default;
  }
</style>
