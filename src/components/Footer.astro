---
import { FOOTER } from "@/consts";
import type { Lang } from "@/types/lang";

type Props = {
  lang: Lang;
};
const { lang } = Astro.props;
console.log(lang);
const { url, name } =
  lang === "es"
    ? { url: "/en", name: "🏴󠁧󠁢󠁥󠁮󠁧󠁿 English" }
    : { url: "/es", name: "🇪🇸 Español" };
---

<footer>
  <div class="social-links">
    {
      FOOTER.map((link) => (
        <a href={link.link} target="_blank">
          {link.name}
        </a>
      ))
    }
    <a href={url}>{name}</a>
  </div>
</footer>
<style>
  footer {
    padding: 0.5rem 0;
    opacity: 0.8;
    text-align: center;
  }
  .social-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1em;
    margin-top: 1em;
  }
  .social-links a {
    color: #fff;
    text-decoration: none;
    &:hover {
      color: var(--accent);
      transition-duration: 0.4s;
    }
  }
</style>
